Subject: [PATCH] Enable lpuart7 for u-boot

---
 arch/arm/dts/imx93-11x11-evk.dts | 17 +++++++++++++++--
 1 file changed, 15 insertions(+), 2 deletions(-)

diff --git a/arch/arm/dts/imx93-11x11-evk.dts b/arch/arm/dts/imx93-11x11-evk.dts
index b94165230ba..fdc5d94cc35 100644
--- a/arch/arm/dts/imx93-11x11-evk.dts
+++ b/arch/arm/dts/imx93-11x11-evk.dts
@@ -17,8 +17,8 @@
 	 };
 
 	chosen {
-		bootargs = "console=ttyLP0,115200";
-		stdout-path = &lpuart1;
+		bootargs = "console=ttyLP6,115200";
+		stdout-path = &lpuart7;
 	};
 
 	reserved-memory {
@@ -384,6 +384,12 @@
 	status = "okay";
 };
 
+&lpuart7 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&pinctrl_uart7>;
+	status = "okay";
+};
+
 &media_blk_ctrl {
 	status = "okay";
 };
@@ -556,6 +562,13 @@
 		>;
 	};
 
+	pinctrl_uart7: uart7grp {
+		fsl,pins = <
+			MX93_PAD_GPIO_IO08__LPUART7_TX			0x31e
+			MX93_PAD_GPIO_IO09__LPUART7_RX			0x31e
+		>;
+	};
+
